{
  "name": "woodx",
  "module": "./src/index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fluent-ffmpeg": "^2.1.27"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "start": "bun run build && bun run build-windows && ./dist/woodx",
    "dev": "bun run ./src/index.ts",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile ./dist/woodx ./src/index.ts",
    "build-windows": "bun build --compile --target=bun-windows-x64 ./src/index.ts --outfile ./dist/windows/woodx",
    "caddy": "caddy run --config ./CaddyFile",
    "start-caddy": "brew services start caddy",
    "restart-caddy": "brew services restart caddy",
    "serve": "ngrok http --url=optionally-special-possum.ngrok-free.app http://localhost:2019"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "elysia": "^1.2.24",
    "fluent-ffmpeg": "^2.1.3",
    "fs": "^0.0.1-security",
    "inquirer": "^12.4.2",
    "ora": "^8.2.0",
    "path": "^0.12.7",
    "zx": "^8.3.2"
  }
}
